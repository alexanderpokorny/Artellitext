# ===========================================
# Artellitext Environment Configuration
# ===========================================
#
# Copy this file to .env and fill in the values
# For local development, use the defaults below
#
# IMPORTANT: Never commit .env to git

# ===========================================
# Application
# ===========================================
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_NAME=Artellitext
NODE_ENV=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Full connection URL (used by application)
DATABASE_URL=postgres://postgres:artellitext_dev@localhost:5432/Artellitext

# Individual components (used by scripts)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=Artellitext
DATABASE_USER=postgres
DATABASE_PASSWORD=artellitext_dev

# Docker container name for db-manage.sh
DB_CONTAINER=pgvector-db

# ===========================================
# Session Security
# ===========================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-key-change-in-production

# ===========================================
# Storage (S3-compatible / MinIO)
# ===========================================
# 
# Local Development: Leave commented for local filesystem storage
# Production: Configure S3 or MinIO
#
# For MinIO: use the API endpoint (9000), not console (9001)
# For local MinIO: http://localhost:9000

# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=artellitext
# S3_REGION=eu-central-1
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_FORCE_PATH_STYLE=true

# Legacy aliases (deprecated, use S3_* instead)
# STORAGE_ENDPOINT=
# STORAGE_BUCKET=
# STORAGE_REGION=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=

# ===========================================
# AI/LLM Configuration
# ===========================================
# Optional - users can provide their own keys (BYOK)
# Used only for server-side AI features

# OpenRouter (recommended for multi-model access)
OPENROUTER_API_KEY=

# OpenAI (fallback)
OPENAI_API_KEY=

# Local Transformers.js models (no API key needed)
# Models are downloaded on first use

# ===========================================
# Feature Flags
# ===========================================
PUBLIC_ENABLE_GEOLOCATION=false
PUBLIC_ENABLE_AI_FEATURES=false
PUBLIC_ENABLE_OFFLINE=true
PUBLIC_ENABLE_TEXT_ANALYSIS=true

# ===========================================
# Payment / Subscriptions
# ===========================================
# LemonSqueezy integration (optional)
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=

# ===========================================
# Development Options
# ===========================================
# Enable debug logging
DEBUG=false

# Disable HTTPS redirect for local dev
DISABLE_HTTPS_REDIRECT=true

# ===========================================
# Coolify Deployment
# ===========================================
# These are typically set by Coolify automatically
# COOLIFY_URL=
# COOLIFY_FQDN=
