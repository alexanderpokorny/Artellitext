# ===========================================
# Artellico Environment Configuration
# ===========================================

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/Artellitext

# Session Security (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-key-change-in-production

# Application
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_NAME=Artellico

# Storage (S3-compatible / MinIO)
# For MinIO: use the API endpoint, not the console URL
STORAGE_ENDPOINT=https://api.minio.pokorny.wien
STORAGE_BUCKET=artellico
STORAGE_REGION=eu-central-1
STORAGE_ACCESS_KEY=artellitext-user
STORAGE_SECRET_KEY=artellitext-user-secret

S3_ENDPOINT=https://api.minio.pokorny.wien
S3_BUCKET=artellico
S3_REGION=eu-central-1
S3_ACCESS_KEY=artellitext-user
S3_SECRET_KEY=artellitext-user-secret

# AI/LLM (optional - user can provide own keys)
OPENROUTER_API_KEY=
OPENAI_API_KEY=

# Feature Flags
PUBLIC_ENABLE_GEOLOCATION=false
PUBLIC_ENABLE_AI_FEATURES=false

# LemonSqueezy (for subscriptions)
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=
