# ===========================================
# Artellico - Production Configuration Template
# ===========================================
# Copy this to .env.production.local and fill in real values.
# NEVER commit .env.production.local to git!
#
# For deployment, these variables should be set in your hosting
# environment (Docker, PM2, systemd, etc.)

# Database (Production PostgreSQL)
DATABASE_URL=postgres://artellico_user:SECURE_PASSWORD@db.example.com:5432/artellico_prod

# Session Security (MUST be different from dev!)
# Generate with: openssl rand -base64 32
SESSION_SECRET=GENERATE_A_SECURE_SECRET_HERE

# Application
PUBLIC_APP_URL=https://artellico.example.com
PUBLIC_APP_NAME=Artellico

# Storage (MinIO / S3)
STORAGE_ENDPOINT=https://api.minio.pokorny.wien
STORAGE_BUCKET=artellico
STORAGE_ACCESS_KEY=PROD_ACCESS_KEY
STORAGE_SECRET_KEY=PROD_SECRET_KEY
STORAGE_REGION=eu-central-1

# AI/LLM
OPENROUTER_API_KEY=
OPENAI_API_KEY=

# Feature Flags
PUBLIC_ENABLE_GEOLOCATION=true
PUBLIC_ENABLE_AI_FEATURES=true

# LemonSqueezy (for subscriptions)
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=

# Production-specific settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
